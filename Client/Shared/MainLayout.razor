@inherits LayoutComponentBase
@inject UserService UserService

<div class="page">
    
    
    @if (UserService.GetLoggedInUser().Role != null)
    {
        <div class="sidebar">
            <NavMenu/>
        </div>

        <main>
            <article class="content px-4">
                @Body
            </article>
        </main>
    }
    else
    {
        <main>
            @Body
        </main>
    }
</div>
